/* Un programa que permita ingresar 3 numeros por teclado y determine cual es el menor */

#include <iostream>

using namespace std;

int main()
{
    int n1, n2, n3;//variables de entrada
    int menor;//variable de salida
    cout<<"*****PROGRAMA QUE DETERMINA EL MENOR DE TRES NUMEROS*****"<<endl<<endl;
    cout<<"Ingrese los 3 valores a operar: "<<endl;
    cin>>n1;//cin>>n1>>n2>>n3
    cin>>n2;
    cin>>n3;
    if(n1<=n2 && n1<=n3)
    {
        menor=n1;
    }
    else
    {
        if(n2<=n1 && n2<=n3)
        {
            menor=n2;
        }
        else
        {
            if(n3<=n1 && n3<=n2)
            {
            menor=n3;
            }
        }
    }
    cout<<"Se ingreso los siguientes valores: "<<n1<<"---"<<n2<<"---"<<n3<<endl;
    cout<<"El menor de los numeros ingresados es: "<<menor<<endl;
    return 0;
}
