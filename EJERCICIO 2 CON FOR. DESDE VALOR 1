// EJERCICIO 2 CON FOR.cpp : Este archivo contiene la función "main". La ejecución del programa comienza y termina ahí.

#include <iostream>

using namespace std;

int main()
{
    int N;
    float suma = 0, promedio;
    do
    {
        cout << "Ingrese el valor de N = ";
        cin >> N;
    } while (N <= 0);
    // un ciclo for;
    for (int i = 1; i <= N; i++) //inicializacion, condicion, incremento
    {
        cout << i << "+";
        suma = suma + i;
    }
    cout << endl << "La sumatoria es: " << suma << endl;
}
